<h2>註冊</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data:{turbo: :fase}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :name, "名稱" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :email, "信箱" %><br />
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :password, "密碼" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 個字元以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "確認密碼" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="actions">
    <%= f.submit "註冊" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
