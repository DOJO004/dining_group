<div>
  <%= link_to "＜", root_path%>
</div>
<p>show order page</p>
<%= @order.title%>
<% if current_user%>
  <%= render "order_details/new"%>
<% else %>
  <div class="my-2">
    <%= link_to "登入後++", new_user_session_path, class:"button" %>
  </div>
<% end %>
<div>
  <p class="text-center ">訂餐列表</p>
  <% if @details%>
    <div class="my-2 overflow-auto border rounded-md ">
      <table class="w-full text-center">
        <thead>
          <tr>
            <th>訂餐人</th>
            <th>名稱</th>
            <th>單價</th>
            <th>數量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @details.each do |detail|%>
            <tr>
              <td><%= User.find_by(id:detail.user_id).name%> </td>
              <td><%= detail.food_name%></td>
              <td><%= detail.price%></td>
              <td><%= detail.amount%></td>
              <td><%= detail.price * detail.amount%> </td>
              <% if current_user.id === detail.user_id %>
                <td><%= link_to "刪除", order_detail_path(order_id: params[:id], id: detail.id), data:{ turbo_method: :delete, turbo_confirm: "確定刪除嗎?"}%> </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
